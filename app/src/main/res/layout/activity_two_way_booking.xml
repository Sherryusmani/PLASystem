<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC107"
    android:orientation="vertical"
    tools:context=".TwoWayBooking">

    <ImageView
        android:id="@+id/backtreturn"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:backgroundTint="#FFC107"
        android:padding="10dp"
        android:src="@drawable/back" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/booking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="12dp"
            android:fontFamily="@font/muli_black"
            android:text="BOOK NOW"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="40sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/twoticket"
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:text="Ticket Information:    "
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/twowayticket"
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:background="#00000000"
            android:text="Return Ticket"
            android:textColor="#4A4949"
            android:textSize="20sp"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:padding="10dp">


        <TextView
            android:id="@+id/cityfrom"
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:text="Your Location:    "
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Spinner

            android:id="@+id/spin"
            android:layout_width="226dp"
            android:layout_height="42dp"
            android:background="#00000000"
            android:ems="10"
            android:hint="from City"
            android:visibility="visible" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:padding="10dp">


        <TextView
            android:id="@+id/cityto"
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:text="Destination:         "
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Spinner

            android:id="@+id/spin2"
            android:layout_width="226dp"
            android:layout_height="42dp"
            android:background="#00000000"
            android:ems="10"
            android:hint="from City"
            android:visibility="visible" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:orientation="horizontal"
        android:padding="10dp">


        <TextView
            android:id="@+id/AirlineSeat"
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:text="No. of Passengers :    "
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText

            android:id="@+id/Seat"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:background="#00000000"
            android:ems="10"
            android:hint="2 - 4"
            android:textAlignment="center" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:orientation="horizontal"
        android:padding="10dp">


        <TextView
            android:id="@+id/Date"
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:text="Date :                    "
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/twowaydate"
            android:layout_width="226dp"
            android:layout_height="42dp"
            android:layout_centerHorizontal="true"
            android:background="#00000000"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="Select Date"
            android:textSize="20sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:orientation="horizontal"
        android:padding="10dp">


        <TextView
            android:id="@+id/airline"
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:text="Ride Type :           "
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText

            android:id="@+id/PLA"
            android:layout_width="226dp"
            android:layout_height="42dp"
            android:background="#00000000"
            android:ems="10"
            android:hint="Economy Ride"
            android:visibility="visible" />




    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm Booking"
            android:textColor="#FFC107"
            android:textSize="15sp" />

    </LinearLayout>

</LinearLayout>